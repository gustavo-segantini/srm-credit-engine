{
  "uid": "srm-api-overview",
  "title": "SRM Credit Engine â€” API Overview",
  "tags": ["srm", "api", "dotnet"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "HTTP Request Rate (req/s)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_received_total[1m]))",
          "legendFormat": "req/s"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "HTTP Error Rate (5xx %)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "100 * sum(rate(http_requests_received_total{code=~\"5..\"}[1m])) / sum(rate(http_requests_received_total[1m]))",
          "legendFormat": "error %"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "P95 Latency (ms)",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p95 ms"
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "P99 Latency (ms)",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p99 ms"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "HTTP Requests by Status Code",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_received_total[1m])) by (code)",
          "legendFormat": "{{code}}"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Request Duration Quantiles",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Requests by Route",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_received_total[1m])) by (handler)",
          "legendFormat": "{{handler}}"
        }
      ]
    }
  ]
}
